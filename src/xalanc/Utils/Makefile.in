# Output directory
OUTDIR := ../../..



include $(XALANCROOT)/version.incl
include ../../../Makefile.incl


## ----------------------------------------------------------------------------

LOC_LIBNAME = lib${LOC_PROJECT_NAME}

LOC_LIB = ${LOC_LIBNAME}$(SHLIBSUFFIX).${LIB_MAJOR_VER}.${LIB_MINOR_VER}

LOC_SONAME = ${LOC_LIBNAME}${SHLIBSUFFIX}.${LIB_MAJOR_VER}

MESSAGELIB = ${XSL_LIB_DIR}/${LOC_LIB}

XALANMSGLIB_SRC=$(XALANCROOT)/src/xalanc/Utils/XalanMsgLib

MSG_CREATOR_SRC=$(XALANCROOT)/src/xalanc/Utils/MsgCreator

XSL_NLS_DIR=$(XALANCROOT)/src/xalanc/NLS

MSGFILENAME=XalanMsg_

XIFFEXT=.xlf

MOVE= mv

COPY=cp

MSG_CREATOR_OBJECTS= $(XSL_OBJ_DIR)/MsgFileOutputStream.o $(XSL_OBJ_DIR)/ICUResHandler.o $(XSL_OBJ_DIR)/InMemHandler.o $(XSL_OBJ_DIR)/MsgCreator.o $(XSL_OBJ_DIR)/NLSHandler.o $(XSL_OBJ_DIR)/SAX2Handler.o 

CATALOG_NAME=$(MSGFILENAME)$(LOCAL).cat

LOC_ALLLIBS = $(subst $(LOCAL_LIB), ,$(ALLLIBS))

INCLUDE_DIR = $(XALANCROOT)/src/xalanc/Include


.PHONY: local doClean prepare
## ----------------------------------------------------------------------------
## Per platform defs

#=============== LINUX SPECIFIC OPTIONS =========================
ifeq ($(PLATFORM), LINUX)

export LD_LIBRARY_PATH = $(XERCESCROOT)/lib:$(ICUROOT)/lib
MAKE_SHARED_LOC = ${CXX} $(CXXFLAGS) -Wl,-soname,$(LOC_SONAME) -D${PLATFORM} -shared ${PIC_OPTION}

endif

#=============== FREEBSD SPECIFIC OPTIONS ======================

ifeq ($(PLATFORM), FREEBSD)

MAKE_SHARED_LOC=$(MAKE_SHARED)

endif

#=============== NETBSD SPECIFIC OPTIONS ======================

ifeq ($(PLATFORM), NETBSD)

MAKE_SHARED_LOC=$(MAKE_SHARED)

endif

#=============== HPUX SPECIFIC OPTIONS =========================
ifeq ($(PLATFORM), HPUX)

export SHLIB_PATH=$(XERCESCROOT)/lib:$(ICUROOT)/lib

MAKE_SHARED_LOC = $(CXX) -b +Z ${LDFLAGS} -Wl,+s -Wl,+h,${LOC_SONAME}

endif
#=============== SOLARIS SPECIFIC OPTIONS =========================
ifeq ($(PLATFORM), SOLARIS)

export LD_LIBRARY_PATH = $(XERCESCROOT)/lib:$(ICUROOT)/lib

MAKE_SHARED_LOC = ${CXX} -D${PLATFORM} -G -ptr$(ALL_OBJECTS_DIR) ${LDFLAGS} -h ${LOC_SONAME}

endif
#=============== AIX SPECIFIC OPTIONS =========================
ifeq ($(PLATFORM), AIX)

export LIBPATH = $(XERCESCROOT)/lib:$(ICUROOT)/lib

MAKE_SHARED_LOC=$(MAKE_SHARED)

LOC_LIB = ${LOC_LIBNAME}${LIB_MAJOR_VER}.${LIB_MINOR_VER}${SHLIBSUFFIX}

LOC_LIBKEYNAME=${LOC_PROJECT_NAME}${LIB_MAJOR_VER}

endif

#=============== OS390 SPECIFIC OPTIONS =========================

ifeq ($(PLATFORM), OS390)

MAKE_SHARED_LOC=$(MAKE_SHARED)

LOC_LIB = ${LOC_LIBNAME}.${VER}$(OS390SIDEDECK)



endif

#============ TRU64 SPECIFIC OPTIONS ============================
ifeq ($(PLATFORM), TRU64)

MAKE_SHARED_LOC=$(MAKE_SHARED)

endif
#============ MacOSX SPECIFIC OPTIONS ============================
ifeq ($(PLATFORM), MACOSX)
MAKE_SHARED_LOC=$(MAKE_SHARED)
endif
#============ end of Platform SPECIFIC OPTIONS ============================
##=================== Common for all localization systems area ============

$(XSL_OBJ_DIR)/%.o : $(MSG_CREATOR_SRC)/%.cpp    
	$(CC1) $(XSL_BUILD_OPTIONS) -c $(XSL_INCL) $(EXTRA_COMPILE_OPTIONS) -o $@ $<

$(XSL_OBJ_DIR)/%.o : $(MSG_CREATOR_SRC)/%.hpp    
	$(CC1) $(XSL_BUILD_OPTIONS) -c $(XSL_INCL) $(EXTRA_COMPILE_OPTIONS) -o $@ $<

$(XSL_BIN_DIR)/MsgCreator : $(MSG_CREATOR_OBJECTS)
	${LINK} $(XSL_BUILD_OPTIONS) ${PLATFORM_LIB_LINK_OPTIONS} ${LIBRARY_SEARCH_PATHS} \
	${EXTRA_LINK_OPTIONS}  $(LOC_ALLLIBS) $^ -o $@


##=================== End of Common for all localization systems area =====
## ----------------------------------------------------------------------------
ifeq ($(MESSAGELOADER),INMEM)



local: $(MESSAGELIB)

${XSL_OBJ_DIR}/XalanMsgLib.o : $(XALANMSGLIB_SRC)/XalanMsgLib.cpp $(XALANMSGLIB_SRC)/XalanMsgLib.hpp $(XALANMSGLIB_SRC)/LocalMsgData.hpp
	$(CC1) $(XSL_BUILD_OPTIONS) -c $(XSL_INCL) $(EXTRA_COMPILE_OPTIONS) -o $@ $(XALANMSGLIB_SRC)/XalanMsgLib.cpp
	
	
$(MESSAGELIB) : ${XSL_OBJ_DIR}/XalanMsgLib.o 
	$(MAKE_SHARED_LOC) $(PLATFORM_LIBRARIES) $(EXTRA_LINK_OPTIONS) $(LOC_ALLLIBS) $^ -o $@
	$(LN) -fs $(LOC_LIB) $(XSL_LIB_DIR)/$(LOC_LIBNAME)$(SHLIBSUFFIX)
ifeq ($(PLATFORM), AIX)
	$(LN) -fs $(LOC_LIB) $(XSL_LIB_DIR)/$(LOC_LIBNAME)$(LIB_MAJOR_VER)$(SHLIBSUFFIX)
else	
	$(LN) -fs $(LOC_LIB) $(XSL_LIB_DIR)/$(LOC_LIBNAME)$(SHLIBSUFFIX).$(LIB_MAJOR_VER)
endif ## AIX

$(XALANMSGLIB_SRC)/LocalMsgData.hpp : $(XSL_BIN_DIR)/MsgCreator $(XSL_NLS_DIR)/$(LOCAL)/$(MSGFILENAME)$(LOCAL)$(XIFFEXT)
	$(XSL_BIN_DIR)/MsgCreator $(XSL_NLS_DIR)/$(LOCAL)/$(MSGFILENAME)$(LOCAL)$(XIFFEXT) -TYPE $(MESSAGELOADER)
	@$(MOVE) LocalMsgIndex.hpp $(INCLUDE_DIR)
	@$(MOVE) LocalMsgData.hpp  $(XALANMSGLIB_SRC)		

install:

prepare :
	
endif  # end of ($(MESSAGELOADER),INMEM))

## ----------------------------------------------------------------------------

ifeq ($(MESSAGELOADER),ICU)
##=============================== Specific for ICU variables ================================

GENRB    = $(ICUROOT)/bin/genrb

PKGDATA  = $(ICUROOT)/bin/pkgdata



##=============================== End of Specific for ICU variables ================================-M 

local: $(MESSAGELIB) $(INCLUDE_DIR)/LocalMsgIndex.hpp

$(MESSAGELIB) : $(XSL_NLS_DIR)/$(LOCAL)/$(LOCAL).txt
	$(GENRB) --package-name $(LOC_PROJECT_NAME) -d $(XSL_NLS_DIR)/$(LOCAL)  $(XSL_NLS_DIR)/$(LOCAL)/$(LOCAL).txt
	echo $(XSL_NLS_DIR)/$(LOCAL)/$(LOC_PROJECT_NAME)_$(LOCAL).res >> res-file-list.txt
	$(PKGDATA) --name $(LOC_PROJECT_NAME) -T . -v -O $(ICUROOT)/lib/icu/Makefile.inc  --mode dll -d $(XSL_LIB_DIR) res-file-list.txt -M "prefix=$(ICUROOT) TARGET=$(LOC_LIB)"   
	$(LN) -fs $(LOC_LIB) $(XSL_LIB_DIR)/$(LOC_LIBNAME)$(SHLIBSUFFIX)
ifeq ($(PLATFORM), AIX)
	$(LN) -fs $(LOC_LIB) $(XSL_LIB_DIR)/$(LOC_LIBNAME)$(LIB_MAJOR_VER)$(SHLIBSUFFIX)
else	
	$(LN) -fs $(LOC_LIB) $(XSL_LIB_DIR)/$(LOC_LIBNAME)$(SHLIBSUFFIX).$(LIB_MAJOR_VER)
endif ## AIX

$(INCLUDE_DIR)/LocalMsgIndex.hpp : $(XSL_NLS_DIR)/$(LOCAL)/$(LOCAL).txt

$(XSL_NLS_DIR)/$(LOCAL)/$(LOCAL).txt : $(XSL_NLS_DIR)/$(LOCAL)/$(MSGFILENAME)$(LOCAL)$(XIFFEXT) $(XSL_BIN_DIR)/MsgCreator
	$(XSL_BIN_DIR)/MsgCreator $(XSL_NLS_DIR)/$(LOCAL)/$(MSGFILENAME)$(LOCAL)$(XIFFEXT) -TYPE $(MESSAGELOADER) -LOCAL $(LOCAL)
	$(MOVE) LocalMsgIndex.hpp $(INCLUDE_DIR)
	$(MOVE) $(LOCAL).txt $(XSL_NLS_DIR)/$(LOCAL)
	
prepare :
	-${MKDIR} -p $(XSL_NLS_DIR)/$(LOCAL)

install:
	
endif # end of ($(MESSAGELOADER),ICU)

##=============================== NLS SYSTEM =====================================================
ifeq ($(MESSAGELOADER),NLS)




install:
	$(COPY) $(XSL_NLS_DIR)/$(LOCAL)/$(CATALOG_NAME) $(XSL_BIN_DIR)/bin


prepare:

local:  $(XSL_NLS_DIR)/$(LOCAL)/$(MSGFILENAME)$(LOCAL).cat $(INCLUDE_DIR)/LocalMsgIndex.hpp

$(XSL_NLS_DIR)/$(LOCAL)/$(MSGFILENAME)$(LOCAL).cat : $(XSL_NLS_DIR)/$(LOCAL)/$(MSGFILENAME)$(LOCAL)$(XIFFEXT) $(XSL_BIN_DIR)/MsgCreator
	$(XSL_BIN_DIR)/MsgCreator $(XSL_NLS_DIR)/$(LOCAL)/$(MSGFILENAME)$(LOCAL)$(XIFFEXT) -TYPE $(MESSAGELOADER) -LOCAL $(LOCAL)
	$(MOVE) LocalMsgIndex.hpp $(INCLUDE_DIR)
	$(MOVE) $(MSGFILENAME)$(LOCAL).msg $(XSL_NLS_DIR)/$(LOCAL)
	-rm -f $(MSGFILENAME)$(LOCAL).cat
	gencat  $(CATALOG_NAME) $(XSL_NLS_DIR)/$(LOCAL)/$(MSGFILENAME)$(LOCAL).msg
	$(MOVE)	$(CATALOG_NAME) $(XSL_NLS_DIR)/$(LOCAL)
	
$(INCLUDE_DIR)/LocalMsgIndex.hpp :
	

endif
##=============================== END OF NLS SYSTEM ==================================================

doClean:
	rm -f	$(XSL_BIN_DIR)/MsgCreator
	rm -f	$(XSL_NLS_DIR)/$(LOCAL)/$(MSGFILENAME)$(LOCAL).msg
	rm -f	$(XSL_NLS_DIR)/$(LOCAL)/$(CATALOG_NAME)
	rm -f   $(XSL_NLS_DIR)/$(LOCAL)/$(LOCAL).txt
	rm -f   $(XSL_NLS_DIR)/$(LOCAL)/$(LOC_PROJECT_NAME)_$(LOCAL).res
	rm -f   res-file-list.txt
	rm -f	$(XSL_LIB_DIR)/$(LOC_LIBNAME)*
	rm -f   $(XALANMSGLIB_SRC)/LocalMsgData.hpp
	rm -f 	$(INCLUDE_DIR)/XalanMsgIndex.hpp
	rm -f   $(MESSAGELIB)


